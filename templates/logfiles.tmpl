#filter WebSafe
<div id="log-wrapper" class="">
    <p>
    $message
    </p>
    #end filter
    <ul>
        #for $logfile in $logfiles
            <li><span><a href="$logfile.url">$logfile.name</a> --- $logfile.size KB --- </span><span><a href="$logfile.uploadurl">Upload to Google Docs</a> --- 
          #if $logfile.active
            <a href="#" stopurl="$logfile.stopurl" class="stop-link">Stop logging</a>
          #else
            <a href="$logfile.removeurl">Delete forever</a>
          #end if
          </span></li>
        #end for
    </ul>
</div>